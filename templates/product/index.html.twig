{% extends 'base.html.twig' %}

{% block title %}Nos produits-Sitraka Boutique{% endblock %}

{% block content  %}
<div class="row">
    <div class="col-md-3" data-aos="fade-down">
        <h3>Vos recherche</h3>
        {{ form_start(form) }}

        <div class="form-row align-items-end" >
            <div class="col">
              {{ form_row(form.string) }}
            </div>
        </div>   

        {{ form_end(form) }}
    </div>

    <div class="col-md-9">
        <h3 data-aos="fade-down">Nos Produits</h3>
        <section class="popular"> 
            <div class="row">
                {% for product in products %}
                <div class="col-md-4">
                 <div class="box-container">
                     <div class="box" data-aos="fade-right">
                        <a href="{{path('product', {'slug': product.slug})}}">
                          <img src="/uploads/{{product.illustration}}" alt="">
                        </a>
                          <h3>{{product.name}}</h3>
                          <span>{{product.subtitle}}</span>
                         <div class="price">{{(product.price/100)|number_format(2,',','.')}} â‚¬</div>
                         <a href="{{path('add_to_cart',{'id':product.id})}}"><button class="btn btn-primary btn-sm"><i class="fas-fa-shop"></i>Add to cart</button></a>
                         <a href="{{path('product', { 'slug' : product.slug })}}"><button onclick="window.location.href ='{{path('product', { 'slug' : product.slug })}}';" class="btn btn-info btn-sm"><i class="fas-fa-search"></i>Details</button></a>
                     </div>
                 </div>
                </div>
                {% endfor %}
            </div>
        </section>
    
    </div>

</div>

<hr data-aos="fade-down">
{% endblock %}
